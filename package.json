{
  "name": "tap-parser",
  "version": "11.0.2",
  "description": "parse the test anything protocol",
  "main": "lib/index.js",
  "bin": {
    "tap-parser": "bin/cmd.js"
  },
  "dependencies": {
    "events-to-array": "^2.0.3",
    "tap-yaml": "^1.0.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/tap": "^15.0.6",
    "eslint-config-prettier": "^8.5.0",
    "glob": "^7.0.5",
    "minipass": "^3.3.4",
    "prettier": "^2.7.1",
    "tap": "^16.3.0",
    "typedoc": "^0.23.20",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "snap": "tap",
    "test": "tap",
    "prepare": "tsc",
    "pretest": "tsc",
    "presnap": "tsc",
    "format": "prettier --write . --loglevel warn",
    "preversion": "npm test",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin --follow-tags",
    "postpublish": "rm -rf lib",
    "typedoc": "typedoc ./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/tapjs/tap-parser.git"
  },
  "homepage": "https://github.com/tapjs/tap-parser",
  "keywords": [
    "tap",
    "test",
    "parser"
  ],
  "license": "MIT",
  "files": [
    "lib",
    "bin"
  ],
  "prettier": {
    "semi": false,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "eslintIgnore": [
    "/node_modules",
    "/lib"
  ],
  "tap": {
    "coverage-map": "map.js",
    "node-arg": [
      "--no-warnings",
      "--loader",
      "ts-node/esm"
    ],
    "ts": false
  },
  "nyc": {
    "hookRunInThisContext": true
  },
  "engines": {
    "node": ">= 12"
  }
}
