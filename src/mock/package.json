{
  "name": "@tapjs/mock",
  "version": "0.0.0-0",
  "description": "tap plugin adding t.mockRequire() and t.mockImport()",
  "author": "Isaac Z. Schlueter <i@izs.me> (https://blog.izs.me)",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "exports": {
    "./package.json": {
      "import": "./package.json",
      "require": "./package.json"
    },
    ".": {
      "import": {
        "types": "./dist/mjs/loader.d.ts",
        "default": "./dist/mjs/loader.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./loader": {
      "import": {
        "types": "./dist/mjs/loader.d.ts",
        "default": "./dist/mjs/loader.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "license": "BlueOak-1.0.0",
  "scripts": {
    "preversion": "npm test",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin --follow-tags",
    "prepare": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && bash ./scripts/fixup.sh",
    "pretest": "npm run prepare",
    "presnap": "npm run prepare",
    "test": "tap",
    "snap": "tap",
    "format": "prettier --write . --loglevel warn --ignore-path ../../.prettierignore --cache",
    "typedoc": "typedoc --tsconfig tsconfig.json ./src/*.ts"
  },
  "tap": {
    "coverage-map": "map.js"
  },
  "engines": {
    "node": ">=14"
  },
  "funding": {
    "url": "https://github.com/sponsors/isaacs"
  },
  "repository": "https://github.com/tapjs/tapjs",
  "dependencies": {
    "@tapjs/after": ">=0.0.0-0",
    "@tapjs/core": ">=0.0.0-0",
    "@tapjs/stack": ">=0.0.0-0",
    "resolve-import": "^1.0.0"
  }
}
