{
  "name": "@tapjs/mock",
  "version": "0.0.0-22",
  "description": "tap plugin adding t.mockRequire() and t.mockImport()",
  "author": "Isaac Z. Schlueter <i@izs.me> (https://blog.izs.me)",
  "type": "module",
  "keywords": [
    "tapjs plugin"
  ],
  "tshy": {
    "exports": {
      ".": "./src/index.ts",
      "./package.json": "./package.json",
      "./loader": "./src/legacy-loader.mts",
      "./import": "./src/import.mts"
    }
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    },
    "./package.json": "./package.json",
    "./loader": {
      "import": {
        "types": "./dist/esm/legacy-loader.d.mts",
        "default": "./dist/esm/legacy-loader.mjs"
      }
    },
    "./import": {
      "import": {
        "types": "./dist/esm/import.d.mts",
        "default": "./dist/esm/import.mjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "license": "BlueOak-1.0.0",
  "scripts": {
    "prepare": "tshy",
    "pretest": "npm run prepare",
    "presnap": "npm run prepare",
    "test": "tap",
    "snap": "tap",
    "format": "prettier --write . --loglevel warn --ignore-path ../../.prettierignore --cache",
    "typedoc": "typedoc --tsconfig tsconfig/esm.json ./src/*.ts"
  },
  "tap": {
    "typecheck": false,
    "coverage-map": "map.js"
  },
  "engines": {
    "node": ">=16"
  },
  "funding": {
    "url": "https://github.com/sponsors/isaacs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tapjs/tapjs.git"
  },
  "peerDependencies": {
    "@tapjs/core": "0.0.0-21"
  },
  "dependencies": {
    "@tapjs/after": "0.0.0-21",
    "@tapjs/stack": "0.0.0-7",
    "resolve-import": "^1.2.1",
    "walk-up-path": "^3.0.1"
  }
}
