{
  "entryPoints": ["src/*"],
  "name": "Node TAP",
  "entryPointStrategy": "packages",
  "includeVersion": true,
  "readme": "./README.md",
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "module": "esnext"
  }
}
